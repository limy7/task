<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true"
				dataChange="dataChangeHandler(event)"
				xmlns:controls="controls.*"
				creationComplete="itemrenderer1_creationCompleteHandler(event)"
				>
	<fx:Script>
		<![CDATA[
			import events.TextAreaChangedEvent;
			
			import mx.events.FlexEvent;
			
			import spark.events.TextOperationEvent;
		
			protected function dataChangeHandler(event:FlexEvent):void
			{
				taskNameText.text = data.name;
				
			}
	
			protected function changeHandler(event:TextOperationEvent):void
			{
				//这里抛出事件
				this.dispatchEvent(new TextAreaChangedEvent(TextAreaChangedEvent.TEXT_CHANGED));
			}
			
			protected function itemrenderer1_creationCompleteHandler(event:FlexEvent):void
			{
				this.dispatchEvent(new Event("testE", true));
			}
			
		]]>
	</fx:Script>
	
	<controls:AutoHeightTextArea id="taskNameText" borderAlpha="0.5" change="changeHandler(event)"/>
	
</s:ItemRenderer>
